<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Laba3.AddComment"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AddComment"
    BackgroundColor="#1E1E1E">
    <ScrollView>
        <StackLayout Padding="20">
            <Entry x:Name="author" Placeholder="Enter author name" Text="{Binding Author}" TextColor="White" BackgroundColor="#333"/>
            <Entry x:Name="content" Placeholder="Enter comment" Text="{Binding Content}" TextColor="White" BackgroundColor="#333"/>
            <Button Clicked="OnSubmitClicked" Text="Submit" BackgroundColor="#666" TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
